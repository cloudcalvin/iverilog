SHELL = /bin/sh

suffix = @install_suffix@

prefix = @prefix@
exec_prefix = @exec_prefix@
srcdir = @srcdir@

VPATH = $(srcdir)

bindir = @bindir@
libdir = @libdir@
includedir = $(prefix)/include

CC = @CC@
INSTALL = @INSTALL@
INSTALL_PROGRAM = @INSTALL_PROGRAM@
INSTALL_DATA = @INSTALL_DATA@

ifeq (@srcdir@,.)
INCLUDE_PATH = -I. -I..
else
INCLUDE_PATH = -I. -I.. -I$(srcdir) -I$(srcdir)/..
endif

CPPFLAGS = $(INCLUDE_PATH) @CPPFLAGS@ @DEFS@ @PICFLAG@
CFLAGS = @WARNING_FLAGS@ @WARNING_FLAGS_CC@ @CFLAGS@
LDFLAGS = @LDFLAGS@

O = svs.o classes.o constant.o enumerate.o expression.o statement.o switches.o types.o

all: dep svs.tgt

check: all

clean:
	rm -rf *.o dep svs.tgt

distclean: clean
	rm -f Makefile config.log

cppcheck: $(O:.o=.c)
	cppcheck --enable=all -f --suppressions-list=$(srcdir)/cppcheck.sup \
	         --relative-paths=$(srcdir) $(INCLUDE_PATH) $^

Makefile: $(srcdir)/Makefile.in ../config.status
	cd ..; ./config.status --file=tgt-svs/$@

dep:
	mkdir dep

%.o: %.c
	$(CC) $(CPPFLAGS) $(CFLAGS) @DEPENDENCY_FLAG@ -c $< -o $*.o
	mv $*.d dep

ifeq (@WIN32@,yes)
  TGTLDFLAGS=-L.. -livl
  TGTDEPLIBS=../libivl.a
else
  TGTLDFLAGS=
  TGTDEPLIBS=
endif

svs.tgt: $O $(TGTDEPLIBS)
	$(CC) @shared@ $(LDFLAGS) -o $@ $O $(TGTLDFLAGS)

install: all installdirs $(libdir)/ivl$(suffix)/svs.tgt \
	$(libdir)/ivl$(suffix)/svs.conf $(libdir)/ivl$(suffix)/svs-s.conf

$(libdir)/ivl$(suffix)/svs.tgt: ./svs.tgt
	$(INSTALL_PROGRAM) ./svs.tgt "$(DESTDIR)$(libdir)/ivl$(suffix)/svs.tgt"

$(libdir)/ivl$(suffix)/svs.conf: svs.conf
	$(INSTALL_DATA) $< "$(DESTDIR)$(libdir)/ivl$(suffix)/svs.conf"

$(libdir)/ivl$(suffix)/svs-s.conf: svs-s.conf
	$(INSTALL_DATA) $< "$(DESTDIR)$(libdir)/ivl$(suffix)/svs-s.conf"

installdirs: $(srcdir)/../mkinstalldirs
	$(srcdir)/../mkinstalldirs "$(DESTDIR)$(libdir)/ivl$(suffix)"

uninstall:
	rm -f "$(DESTDIR)$(libdir)/ivl$(suffix)/svs.tgt"
	rm -f "$(DESTDIR)$(libdir)/ivl$(suffix)/svs.conf"
	rm -f "$(DESTDIR)$(libdir)/ivl$(suffix)/svs-s.conf"


-include $(patsubst %.o, dep/%.d, $O)
